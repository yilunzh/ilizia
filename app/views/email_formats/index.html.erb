<p id="notice"><%= notice %></p>

<h1>Email Formats</h1>

<table>
  <thead>
    <tr>
      <th>Domain</th>
      <th>Format</th>
      <th>Valid</th>
      <th>Status</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @email_formats.each do |email_format| %>
      <tr>
        <td><%= email_format.domain_id %></td>
        <td><%= email_format.format %></td>
        <td><%= email_format.valid %></td>
        <td><%= email_format.status %></td>
        <td><%= email_format.score %></td>
        <td><%= link_to 'Show', email_format %></td>
        <td><%= link_to 'Edit', edit_email_format_path(email_format) %></td>
        <td><%= link_to 'Destroy', email_format, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Email Format', new_email_format_path %>
