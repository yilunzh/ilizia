<p id="notice"><%= notice %></p>

<h1>Domains</h1>

<%= form_tag domains_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "search", :name => nil %>
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Domain url</th>
      <th>Company name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @domains != nil %>
      <% @domains.each do |domain| %>
        <tr>
          <td><%= domain.domain_url %></td>
          <td><%= domain.company_name %></td>
          <td><%= link_to 'Show', domain %></td>
          <td><%= link_to 'Edit', edit_domain_path(domain) %></td>
          <td><%= link_to 'Destroy', domain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Domain', new_domain_path %>
