<p id="notice"><%= notice %></p>

<h1>Person Email Searches</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Domain</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @person_email_searches.each do |person_email_search| %>
      <tr>
        <td><%= person_email_search.first_name %></td>
        <td><%= person_email_search.last_name %></td>
        <td><%= person_email_search.domain_url %></td>
        <td><%= link_to 'Show', person_email_search %></td>
        <td><%= link_to 'Edit', edit_person_email_search_path(person_email_search) %></td>
        <td><%= link_to 'Destroy', person_email_search, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

